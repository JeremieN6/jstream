{% extends 'base_error.html.twig' %}
{% block title %} Page Non trouvé : Error 404{%  endblock %}
{% block body %}
<div class="wrapper">
    <div class="container pt-5">
        <div class="row no-gutters height-self-center">
            <div class="col-sm-12 text-center align-self-center">
                <div class="iq-error position-relative">
                    <img src="{{asset('images/error/404.png')}}" class="img-fluid iq-error-img" style="width:50%" alt="Error 404">
                    <h2 class="mb-0 mt-4">Oops! La page n'a pas été trouvé.</h2>
                    <p>La page demandée n'existe pas.</p>
                    <button class="btn btn-hover iq-button" href="{{path('main_page')}}"><i class="ri-home-4-line"></i>Retour à l'accueil</button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}